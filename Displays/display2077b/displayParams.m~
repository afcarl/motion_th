function params = displayParams

% Critical parameters
params.numPixels = [800 600];
params.dimensions = [24 18]; %Size in cm
params.distance = 100; %cm
params.frameRate = 75;
params.cmapDepth = 8;
params.screenNumber = 0;      
params.thisRect = [0 0 params.numPixels];

% Descriptive parameters
params.computerName = 'Macintosh HD';
params.monitor = 'CRT';
params.card = 'What graphics card does the computer have?'; 
params.position = 'UCSD 2007b';
