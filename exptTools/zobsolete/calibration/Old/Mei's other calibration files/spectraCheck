% Do the left patch measurements firstdisp('Spectra at the left patch location:');load red170.lft;load red255.lft;load green170.lft;load green255.lft;load blue170.lft;load blue255.lft;% normalize to peak at 1red170(:,2) = red170(:,2)/max(red170(:,2));red255(:,2) = red255(:,2)/max(red255(:,2));green170(:,2) = green170(:,2)/max(green170(:,2));green255(:,2) = green255(:,2)/max(green255(:,2));blue170(:,2) = blue170(:,2)/max(blue170(:,2));blue255(:,2) = blue255(:,2)/max(blue255(:,2));test = red255(:,2) - red170(:,2);redError = [min(test) max(test)]test = green255(:,2) - green170(:,2);greenError = [min(test) max(test)]test = blue255(:,2) - blue170(:,2);blueError = [min(test) max(test)]redLeft = red255;greenLeft = green255;blueLeft = blue255;% The right patch measurementsdisp('Spectra at the right patch location:');load red170.rgt;load red255.rgt;load green170.rgt;load green255.rgt;load blue170.rgt;load blue255.rgt;% normalize to peak at 1red170(:,2) = red170(:,2)/max(red170(:,2));red255(:,2) = red255(:,2)/max(red255(:,2));green170(:,2) = green170(:,2)/max(green170(:,2));green255(:,2) = green255(:,2)/max(green255(:,2));blue170(:,2) = blue170(:,2)/max(blue170(:,2));blue255(:,2) = blue255(:,2)/max(blue255(:,2));test = red255(:,2) - red170(:,2);redError = [min(test) max(test)]test = green255(:,2) - green170(:,2);greenError = [min(test) max(test)]test = blue255(:,2) - blue170(:,2);blueError = [min(test) max(test)]redRight = red255;greenRight = green255;blueRight = blue255;% Check if left and right spectra are the samedisp('Compare spectra of left and right patches:');test = redLeft(:,2) - redRight(:,2);redError = [min(test) max(test)]test = greenLeft(:,2) - greenRight(:,2);greenError = [min(test) max(test)]test = blueLeft(:,2) - blueRight(:,2);blueError = [min(test) max(test)]load red255.lft;load green255.lft;load blue255.lft;redLeft = red255;greenLeft = green255;blueLeft = blue255;load red255.rgt;load green255.rgt;load blue255.rgt;redRight = red255;greenRight = green255;blueRight = blue255;leftMax = ...  [max(redLeft(:,2)) max(greenLeft(:,2)) max(blueLeft(:,2))]rightMax = ...  [max(redRight(:,2)) max(greenRight(:,2)) max(blueRight(:,2))]plot(redLeft(:,1),redLeft(:,2),'r',redRight(:,1),redRight(:,2),'r:');hold on;plot(greenLeft(:,1),greenLeft(:,2),'g',greenRight(:,1),greenRight(:,2),'g:');plot(blueLeft(:,1),blueLeft(:,2),'b',blueRight(:,1),blueRight(:,2),'b:');hold off;